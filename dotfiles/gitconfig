    lg = log --pretty=format:\"%C(red bold)%h%Creset %ad %C(blue dim)%an%Creset %C(bold)%s%Creset%C(yellow)%d\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    dc = diff --cached

